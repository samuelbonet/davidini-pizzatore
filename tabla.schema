CREATE TABLE IF NOT EXISTS Usuarios(usuario VARCHAR(255) NOT NULL, contrasena VARCHAR(255) NOT NULL, telefono CHAR(9) NOT NULL, nombre VARCHAR(250) NOT NULL, correo VARCHAR(250) NOT NULL, direccion VARCHAR(250) NOT NULL, tarjeta_credito(16) NOT NULL, id_usuario INT(11) NOT NULL, PRIMARY KEY(usuario))
CREATE TABLE IF NOT EXISTS Pedido(id_pedido INT NOT NULL, usuario VARCHAR(255) NOT NULL, fecha TIMESTAMP NOT NULL, estado ENUM('Recibido','En preparaci√≥n','Ready','Entregado') NOT NULL DEFAULT 'Recibido',PRIMARY KEY(id_pedido), FOREING KEY(usuario) REFERENCES(id_pedido))
CREATE TABLE IF NOT EXISTS Pedido_Menu(id_pedido_menu INT AUTO_INCREMENT NOT NULL, id_pedido INT NOT NULL, id_menu INT NOT NULL, cantidad INT NOT NULL, PRIMARY KEY(id_pedido_menu))
CREATE TABLE IF NOT EXISTS Menu(id_menu INT NOT NULL, nombre VARCHAR(255) NOT NULL, precio DECIMAL NOT NULL, PRIMARY KEY(id_menu))
CREATE TABLE IF NOT EXISTS Menu_Producto(id_menu_producto INT NOT NULL, id_menu INT NOT NULL, id_producto INT NOT NULL, cantidad VARCHAR(255) NOT NULL, PRIMARY KEY(id_menu_producto))
CREATE TABLE IF NOT EXISTS Producto(id_producto INT NOT NULL, nombre VARCHAR(250) NOT NULL, tipo ENUM('Bebida','Pizza','Complemento','Postre','Otros') NOT NULL DEFAULT 'Otros', PRIMARY KEY(id_producto))